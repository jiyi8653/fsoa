<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.product.dao.ProUserItemDao">
	
	<sql id="Base_Column_List">
    	id, pid, uid, did, create_time
	</sql>

	<sql id="Base_Column_Where">
		<if test="id != null and id != ''"> and id = #{id} </if>
		<if test="pid != null and pid != ''"> and pid = #{pid} </if>
		<if test="uid != null and uid != ''"> and uid = #{uid} </if>
		<if test="did != null and did != ''"> and did = #{did} </if>
		<if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
  	</sql>

	<select id="get" resultType="com.product.domain.ProUserItemDO">
		select
			<include refid="Base_Column_List" />
		from
			fs_pro_user_item
		where
			id = #{id}
	</select>

	<select id="list" resultType="com.product.domain.ProUserItemDO">
		select
			<include refid="Base_Column_List" />
		from
			fs_pro_user_item
        <where>
			<include refid="Base_Column_Where" />
		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select
			count(*)
		from
			fs_pro_user_item
		<where>  
			<include refid="Base_Column_Where" />
		</where>
	</select>

</mapper>